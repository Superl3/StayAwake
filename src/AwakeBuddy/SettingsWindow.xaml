<Window x:Class="AwakeBuddy.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AwakeBuddy Settings"
        Height="520"
        Width="540"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="18">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="10" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="12" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="AwakeBuddy Settings"
                   FontSize="20"
                   FontWeight="SemiBold" />

        <Border Grid.Row="2"
                BorderBrush="#D0D0D0"
                BorderThickness="1"
                CornerRadius="6"
                Padding="10">
            <StackPanel>
                <TextBlock Text="Settings file path"
                           FontWeight="SemiBold"
                           Margin="0,0,0,4" />
                <TextBlock x:Name="SettingsPathTextBlock"
                           TextWrapping="Wrap"
                           Foreground="#444" />
            </StackPanel>
        </Border>

        <Grid Grid.Row="4"
              Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0"
                       VerticalAlignment="Center"
                       Text="Idle threshold (seconds, 0=always)" />
            <TextBox x:Name="IdleThresholdTextBox"
                     Grid.Column="1"
                     Width="120"
                     HorizontalAlignment="Left" />
        </Grid>

        <Grid Grid.Row="5"
              Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0"
                       VerticalAlignment="Center"
                       Text="OLED target display(s)" />

            <StackPanel Grid.Column="1">
                <CheckBox x:Name="AllDisplaysCheckBox"
                          Content="All displays"
                          Margin="0,0,0,6"
                          Checked="OnAllDisplaysCheckBoxChanged"
                          Unchecked="OnAllDisplaysCheckBoxChanged" />

                <ScrollViewer Height="96"
                              VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="TargetDisplaysItemsControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Content="{Binding Label}"
                                          IsChecked="{Binding IsSelected}" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <TextBlock Text="(If none selected, Primary display is used.)"
                           Foreground="#444"
                           Margin="0,6,0,0" />
            </StackPanel>
        </Grid>

        <Grid Grid.Row="6"
              Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0"
                       VerticalAlignment="Center"
                       Text="OLED overlay enabled" />
            <CheckBox x:Name="OverlayEnabledCheckBox"
                      Grid.Column="1"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Left"
                      Content="Enabled" />
        </Grid>

        <Grid Grid.Row="7"
              Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="50" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0"
                       VerticalAlignment="Center"
                       Text="OLED opacity" />
            <Slider x:Name="OverlayOpacitySlider"
                    Grid.Column="1"
                    Minimum="0"
                    Maximum="100"
                    TickFrequency="5"
                    IsSnapToTickEnabled="False"
                    VerticalAlignment="Center"
                    ValueChanged="OnOverlayOpacitySliderValueChanged" />
            <TextBlock x:Name="OverlayOpacityValueText"
                       Grid.Column="2"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right" />
        </Grid>

        <Grid Grid.Row="8"
              Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0"
                       VerticalAlignment="Center"
                       Text="Anti-sleep enabled" />
            <CheckBox x:Name="AntiSleepEnabledCheckBox"
                      Grid.Column="1"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Left"
                      Content="Enabled" />
        </Grid>

        <Grid Grid.Row="9"
              Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0"
                       VerticalAlignment="Center"
                       Text="Anti-sleep interval (seconds)" />
            <TextBox x:Name="AntiSleepIntervalTextBox"
                     Grid.Column="1"
                     Width="120"
                     HorizontalAlignment="Left" />
        </Grid>

        <Grid Grid.Row="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0"
                       VerticalAlignment="Top"
                       Text="Sleep protection scope" />
            <ComboBox x:Name="SleepProtectionScopeComboBox"
                      Grid.Column="1"
                      Width="220"
                      HorizontalAlignment="Left" />
        </Grid>

        <DockPanel Grid.Row="11"
                   LastChildFill="False"
                   Margin="0,14,0,0">
            <TextBlock DockPanel.Dock="Left"
                       VerticalAlignment="Center"
                       Foreground="#444"
                       Text="Toggle changes play sound and show subtitle." />
            <Button DockPanel.Dock="Right"
                    Width="92"
                    Margin="8,0,0,0"
                    Content="Cancel"
                    Click="OnCancelButtonClick" />
            <Button DockPanel.Dock="Right"
                    Width="92"
                    Content="Save"
                    Click="OnSaveButtonClick" />
        </DockPanel>
    </Grid>
</Window>
